{
    "name": "jeffreyvanhees/laravel-online-payment-platform",
    "description": "Laravel connector for Online Payment Platform API using SaloonPHP",
    "type": "library",
    "license": "MIT",
    "keywords": ["payment", "api", "sdk", "online-payment-platform", "saloon", "laravel"],
    "authors": [
        {
            "name": "Jeffrey van Hees",
            "email": "jeffrey@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "saloonphp/laravel-http-sender": "^3.0",
        "saloonphp/pagination-plugin": "^2.2",
        "saloonphp/saloon": "^3.0",
        "spatie/laravel-data": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "pestphp/pest": "^2.0",
        "orchestra/testbench": "^9.0|^10.0",
        "jonpurvis/lawman": "^1.0",
        "laravel/framework": "^11.0|^12.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "JeffreyVanHees\\OnlinePaymentPlatform\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JeffreyVanHees\\OnlinePaymentPlatform\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage",
        "record": "pest --group=recording",
        "replay": "pest --group=replay"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JeffreyVanHees\\OnlinePaymentPlatform\\OnlinePaymentPlatformServiceProvider"
            ],
            "aliases": {
                "OnlinePaymentPlatform": "JeffreyVanHees\\OnlinePaymentPlatform\\OnlinePaymentPlatformFacade"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
